{
  "name": "galacean",
  "displayName": "Galacean VSCode Extension",
  "description": "VSCode tool plugin for galacean",
  "version": "0.1.1",
  "author": "Sway007",
  "publisher": "Galacean",
  "license": "MIT",
  "engines": {
    "vscode": "^1.65.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/galacean/vscode-extension"
  },
  "categories": [
    "Snippets"
  ],
  "contributes": {
    "languages": [
      {
        "id": "shaderlab",
        "extensions": [
          ".shader"
        ]
      }
    ],
    "grammars": [
      {
        "language": "shaderlab",
        "scopeName": "source.shaderlab",
        "path": "./shaderlab.language.json"
      }
    ],
    "snippets": [
      {
        "language": "shaderlab",
        "path": "./snippets.json"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "galacean-explorer",
          "title": "Galacean",
          "icon": "res/icons/logo.svg"
        }
      ]
    },
    "views": {
      "galacean-explorer": [
        {
          "id": "project-list",
          "name": "Project List"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "galacean.pull.project_list",
          "when": "view == project-list",
          "group": "navigation"
        }
      ],
      "scm/title": [
        {
          "command": "galacean.pull.projectAssets",
          "when": "scmProvider == galacean",
          "group": "navigation"
        },
        {
          "when": "scmProvider == galacean",
          "command": "galacean.scm.push",
          "group": "navigation"
        }
      ],
      "scm/resourceState/context": [
        {
          "command": "galacean.scm.add",
          "group": "inline",
          "when": "scmProvider == galacean && scmResourceGroup == change"
        },
        {
          "command": "galacean.scm.remove",
          "group": "inline",
          "when": "scmProvider == galacean &&scmResourceGroup == staged"
        },
        {
          "command": "galacean.scm.restore",
          "group": "inline",
          "when": "scmProvider == galacean && scmResourceGroup == change"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "project-list",
        "contents": "Sign in to Galacean to display project list, edit and sync your scripts and shaders.\n[Sign in](command:galacean.login)"
      }
    ],
    "configuration": {
      "title": "Galacean",
      "properties": {
        "galacean.root": {
          "type": "string",
          "default": "",
          "description": "The galacean workspace root path"
        },
        "galacean.user.mail": {
          "type": "string",
          "default": "",
          "description": "The sign mail"
        }
      }
    },
    "commands": [
      {
        "command": "galacean.login",
        "title": "Login to Galacean",
        "category": "Galacean"
      },
      {
        "command": "galacean.pull.project_list",
        "title": "Pull project list",
        "category": "Galacean",
        "icon": "$(git-fetch)"
      },
      {
        "command": "galacean.pull.projectAssets",
        "title": "Pull project assets",
        "category": "Galacean",
        "icon": "$(cloud-download)"
      },
      {
        "command": "galacean.scm.push",
        "title": "Push asset changes",
        "category": "Galacean",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "galacean.scm.add",
        "title": "Stage Changes",
        "category": "Galacean",
        "icon": "$(diff-review-insert)"
      },
      {
        "command": "galacean.scm.remove",
        "title": "Unstage Changes",
        "category": "Galacean",
        "icon": "$(diff-review-remove)"
      },
      {
        "command": "galacean.scm.restore",
        "title": "Restore Changes",
        "category": "Galacean",
        "icon": "$(discard)"
      }
    ]
  },
  "main": "client/out/main",
  "scripts": {
    "vscode:prepublish": "npm run clear && npm run compile -- --mode production",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "clean": "rm -rf ./node_modules ./client/node_modules ./server/node_modules",
    "install": "cd ./client && npm install && cd ../server && npm install && cd ..",
    "build": "webpack",
    "clear": "rm -rf ./client/out/* ./server/out/*"
  },
  "activationEvents": [
    "onLanguage:shaderlab",
    "workspaceContains:.galacean"
  ],
  "devDependencies": {
    "@types/node": "^20.8.7",
    "@types/vscode": "1.65.0",
    "path-browserify": "^1.0.1",
    "ts-loader": "^9.5.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "form-data": "^4.0.0"
  }
}
